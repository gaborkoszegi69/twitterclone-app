<%- include('header') %>
<h2><%= typeof twitter === 'undefined' ? 'Új' : 'Módosítása' %></h2>
<form method="POST">

    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="twtr_message" name="twtr_message"
               placeholder=" " value="<%= typeof twitter.twtr_message === 'undefined' ? '' : twitter.twtr_message %>">
        <label for="twtr_message">Üzenet</label>
    </div>
    <div class="d-flex gap-2">
        <% if (typeof session_userId != 'undefined' ) { %>
            <% if (session_userId === twitter.twtr_usr_id) { %>
                <input type="submit" class="btn btn-primary flex-fill" value="Save">
               <% } %>
        <% } %>

        <a class="btn btn-warning flex-fill" href="/">Cancel</a>
    </div>
</form>
<%- include('footer') %>