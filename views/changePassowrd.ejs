<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>

    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col">
            <% if (typeof user.usr_id != 'undefined' ) { %>
                    <div>
                        <table class="table">
                            <thead>
                            <tr>
                                <th scope="col"> Felhasználó</th>
                                <th scope="col"></th>
                            </tr>
                            <tr>
                                <td>
                                    <%= typeof user.usr_vezeteknev === 'undefined' ? '' : user.usr_vezeteknev+' '+user.usr_keresztnev %>
                                </td>
                                <td>
                                    <a href="/" class="btn btn-primary btn-sm">Home</a>
                                </td>
                            </tr>
                        </table>
                    </div>
            <%    } %>
<h2>   Felhasználó jelszó módosítása %></h2>
<form method="POST">
    <div class="form-floating mb-3">
        <input type="password" class="form-control"  id="password" name="usr_password" required>
        <label for="password">Jelszó:</label>
    </div>
    <div class="form-floating mb-3">
        <input type="password"class="form-control"  id="verifypassword" name="usr_veryfypassword" required>
        <label for="password">Jelszó megerősítés :</label>
    </div>
    <div class="d-flex gap-2">
        <input type="submit" class="btn btn-primary flex-fill" value="Save">
        <a class="btn btn-warning flex-fill" href="/">Cancel</a>
    </div>
</form>
<%- include('footer') %>