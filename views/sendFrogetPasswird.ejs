        <input type="text" class="form-control" id="emailadress" name="emailadress"
               placeholder=" " value="">
        <label for="usr_emailadress">E-mail cím</label>

    </div>
    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="user.usr_forignmessage" name="usr_forignmessage"
